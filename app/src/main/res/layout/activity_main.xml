<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hr.tvprojectdemo.ui.activity.MainActivity"
    android:background="@color/back"
    >


    <com.hr.tvprojectdemo.widget.layout.tablayout.TvTabLayout
        android:id="@+id/tablayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:tabIndicatorResId="@drawable/zx_p1_light"
        app:tabIndicatorWidth="50dp"
        app:tabIndicatorHeight="7dp"
        app:tabIndicatorBackgroundColor="#887766"
        app:tabIndicatorBackgroundHeight="1dp"
        app:tabMinWidth="80dp"
        app:tabScrollMode="fixed"
        app:tabGravity="center"
        app:tabPaddingBottom="6dp"
        app:tabTexSize="12sp"
        app:tabTextColor="@drawable/selector_tab_font_color">

        <com.hr.tvprojectdemo.widget.layout.tablayout.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题1"/>

        <com.hr.tvprojectdemo.widget.layout.tablayout.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题2"/>

    </com.hr.tvprojectdemo.widget.layout.tablayout.TvTabLayout>

    <com.hr.tvprojectdemo.widget.view.TvViewPager
        android:id="@+id/viewPager"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.hr.tvprojectdemo.widget.view.TvViewPager>

</LinearLayout>
